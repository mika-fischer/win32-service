{
  "name": "win32-service",
  "version": "0.0.4",
  "description": "Minimal bindings to run Node.JS as a Windows service",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "configure": "node scripts/node-gyp-wrap.js configure",
    "build": "tsc && node scripts/node-gyp-wrap.js build",
    "rebuild": "tsc && node scripts/node-gyp-wrap.js rebuild",
    "install": "node scripts/node-gyp-wrap.js rebuild",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "windows",
    "win32",
    "service"
  ],
  "author": "Mika Fischer <mika.fischer@zoopnet.de> (https://github.com/mika-fischer)",
  "license": "ISC",
  "homepage": "https://github.com/mika-fischer/win32-service",
  "bugs": "https://github.com/mika-fischer/win32-service/issues",
  "repository": "github:mika-fischer/win32-service",
  "dependencies": {
    "napi-thread-safe-callback": "0.0.4",
    "node-addon-api": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^8.0.32",
    "typescript": "^2.5.3"
  }
}
